<div class="banner">
  <%= image_tag('photo.jpg') %>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card-1 bg-light p-3">
        <h1><%= @flat.name %></h1>
        <h4 style="font-weight: 100;"><%= @flat.address %></h4>
      </div>
      <div class="card-3 bg-light p-3 mt-3">
        <h3>A bit more about this flat...</h3>
        <p>A lovely summer feel for this spacious garden flat. Two double bedrooms, open plan living area, large kitchen and a beautiful conservatory</p>
        <div class="map">
          <%= image_tag('staticmap', class: 'img-fluid') %>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="card-2 bg-light p-3">
        <h5>Book this Place!</h5>
        <%= simple_form_for :booking, url: "#" do |f| %>
          <div class="form-group row mb-2">
            <div class="col-auto">
              <label for="start-date" class="col-form-label">From:</label>
            </div>
            <div class="col">
              <%= f.input :entry_date, label: false, input_html: { class: "form-control", id: "start-date", placeholder: "12/10/2017" } %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-auto">
              <label for="end-date" class="col-form-label">To:</label>
            </div>
            <div class="col">
              <%= f.input :end_date, label: false, input_html: { class: "form-control", id: "end-date", placeholder: "18/10/2017" } %>
            </div>
            <%= f.button :submit, "Book", class: "btn btn-success mt-2" %>
          </div>
        <% end %>
      </div>
      <div class="card-4 bg-light p-3 mt-3">
        <h3>Details</h3>
          <%= @flat.number_of_guests %> people
          <i class="fa-solid fa-euro-sign fa-sm"> <%= @flat.price_per_night %></i>
      </div>
      <div class="card-5 bg-light p-3 mt-3 d-flex justify-content-between">
        <h5>Share</h5>
        <div class="flex">
          <i class="fa-brands fa-facebook-square me-2"></i>
          <i class="fa-brands fa-twitter-square me-2"></i>
          <i class="fa-brands fa-pinterest-square me-2"></i>
        </div>
      </div>
    </div>
  </div>
</div>
